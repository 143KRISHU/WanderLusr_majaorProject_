<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>Edit Listing Id : <%= listing._id%></h1>
            <form class="edit_form needs-validation" novalidate method="POST" 
                action="/listing/<%= listing._id%>?_method=PUT" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title : </label>
                    <input id="title" value="<%=listing.title%>" name="listing[title]" class="form-control" required>
                    <div class="invalid-feedback">Title should be required.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description : </label>
                    <textarea id="description" placeholder="enter description" 
                    class="form-control" name="listing[description]" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Short Description should be required.</div>
                </div>
                <div class="mb-3" >
                    <img src="<%= showUrl%>"  style="height:150px; width:200px;"">
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label"> Upload New Image : </label>
                    <input id="img" name="listing[image]" type = "file" class="form-control">
                    <div class="invalid-feedback">Image URL should be required.</div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Price : </label>
                        <input id="price" value="<%=listing.price%>"  name="listing[price]" class="form-control"required>
                        <div class="invalid-feedback">Price should be required.</div>
                    </div>
                    <div class="col-md-8">
                        <label for="country" class="form-label">Country : </label>
                        <input id="country" value="<%=listing.country%>"  name="listing[country]" class="form-control"required>
                        <div class="invalid-feedback">Country should be required.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">City : </label>
                    <input id="city" value="<%=listing.location%>" required name="listing[location]" type="text" class="form-control">
                    <div class="invalid-feedback">City should be required.</div>
                </div>
                <button class="btn btn-dark add-btn">Edit</button>
            </form>
        </div>
    </div>
</body>